EXTRAMODULES='3.4-BEDE-external'

post_install() {
cat << EOF
===> You may want to load vboxguest, vboxsf and vboxvideo
EOF
    depmod $(cat /lib/modules/$EXTRAMODULES/version)
}

post_upgrade() {
    depmod $(cat /lib/modules/$EXTRAMODULES/version)
	echo "in order to use the updated modules, reload all guest modules"
}

post_remove() {
    depmod $(cat /lib/modules/$EXTRAMODULES/version)
}
